<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/setup_two">

    <kelaodi.shenmesafe.ui.MarqueeText
        style="@style/text_title_style"
        android:text="手机卡的绑定"/>

    <kelaodi.shenmesafe.ui.MarqueeText
        android:layout_toRightOf="@+id/one"
        style="@style/text_content_style"
        android:layout_marginTop="10dp"
        android:text="通过绑定SIM卡:\n下次重启手机发现SIM卡变化\n就会发送报警短信"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/one"
            style="@style/image_content_lock"/>

        <kelaodi.shenmesafe.ui.MarqueeText
            android:layout_toRightOf="@+id/one"
            style="@style/text_content_style"
            android:text="点击绑定SIM"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/two"
            style="@style/image_content_lock"/>

        <kelaodi.shenmesafe.ui.MarqueeText
            android:layout_toRightOf="@+id/two"
            style="@style/text_content_style"
            android:text="GPS追踪"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/three"
            style="@style/image_content_lock"/>

        <kelaodi.shenmesafe.ui.MarqueeText
            android:layout_toRightOf="@+id/three"
            style="@style/text_content_style"
            android:text="点击绑定SIM卡"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/four"
            style="@style/image_content_lock"/>

        <kelaodi.shenmesafe.ui.MarqueeText
            android:layout_toRightOf="@+id/four"
            style="@style/text_content_style"
            android:text="锁死手机"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            style="@style/image_presence_invisible"/>

        <ImageView
            style="@style/image_presence_online"/>

        <ImageView
            style="@style/image_presence_invisible"/>

        <ImageView
            style="@style/image_presence_invisible"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bind"
            android:layout_centerInParent="true"/>

        <Button
            style="@style/button_pre"
            android:id="@+id/button_pre"/>

        <Button style="@style/button_next"/>
    </RelativeLayout>


</LinearLayout>
